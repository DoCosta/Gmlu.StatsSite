@model RaspberryCreateViewModel

<form asp-controller="Raspberry" asp-action="Create" method="post">
    <div class="form-group">



        <label for="Location"><Br />Location</label>
        <input type="text" class="form-control" id="Location" asp-for="Location" />
        <label for="Name"><Br />Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
        <label for="Ipadress"><Br />Ip Adress</label>
        <input type="text" class="form-control" id="IPadress" asp-for="IPadress" />


    </div>

